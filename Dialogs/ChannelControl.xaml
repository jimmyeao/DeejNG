<UserControl x:Class="DeejNG.Dialogs.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             mc:Ignorable="d"
             Width="146" Height="313"
             TextElement.Foreground="{DynamicResource TextPrimaryBrush}"
            Background="Transparent"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="12"
            FontFamily="Segoe UI"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
        <!-- Mute Button Style -->
        <Style x:Key="MixerMuteButtonStyle" TargetType="ToggleButton" BasedOn="{x:Null}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceHighlightBrush}" />
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#D13438" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Content" Value="Unmute" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Studio-style Fader Slider -->
        <!-- Studio-style Fader Slider with NO hover effects -->
        <Style x:Key="StudioFaderSliderStyle" TargetType="Slider" BasedOn="{x:Null}">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Width="30" Background="Transparent">
                            <!-- Track background -->
                            <Rectangle Fill="{DynamicResource BorderBrush}"
                               Width="3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Stretch"
                               RadiusX="2" RadiusY="2"/>

                            <Track x:Name="PART_Track"
                           Orientation="Vertical"
                           Focusable="False"
                           FocusVisualStyle="{x:Null}"
                         
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Center">

                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{x:Null}"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          IsTabStop="False"
                                          Focusable="False"
                                          OverridesDefaultStyle="True"
                                          Template="{x:Null}"/>
                                </Track.DecreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Width="22" Height="12"
                                   Background="{DynamicResource PrimaryBrush}"
                                   BorderBrush="{DynamicResource BorderBrush}" 
                                   BorderThickness="1"
                                   Cursor="Hand"
                                   SnapsToDevicePixels="True"
                                   Focusable="False"
                                   FocusVisualStyle="{x:Null}"
                                   IsTabStop="False"
                                   OverridesDefaultStyle="True">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="2"
                                                SnapsToDevicePixels="True">
                                                    <!-- No hover triggers here -->
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{x:Null}"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          IsTabStop="False"
                                          Focusable="False"
                                          OverridesDefaultStyle="True"
                                          Template="{x:Null}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{StaticResource Card}" Margin="6,6,6,0">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

            <TextBlock x:Name="TargetTextBox"
                       Margin="0,0,0,12"
                       Width="120"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       FontWeight="SemiBold"
                       TextTrimming="CharacterEllipsis"
                       Foreground="{DynamicResource TextPrimaryBrush}" Height="39" FontSize="11" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="34"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="18"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.ColumnSpan="5"
                      Height="180"
                      VerticalAlignment="Bottom"
                      x:Name="MeterHeightGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="34"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="18"/>
                    </Grid.ColumnDefinitions>

                    <!-- Volume Slider -->
                    <Slider x:Name="VolumeSlider"
                        Grid.Column="0"
                        Orientation="Vertical"
                        Minimum="0"
                        Maximum="1"
                        VerticalAlignment="Stretch"
                        Focusable="False"
                        FocusVisualStyle="{x:Null}"
                        Style="{StaticResource StudioFaderSliderStyle}" />



                    <!-- SkiaSharp Meter Canvas -->
                    <skia:SKElement x:Name="SkiaCanvas"
                                    Grid.Column="2"
                                    PaintSurface="SkiaCanvas_PaintSurface" Margin="0,0,-5,0"/>
                </Grid>

                <!-- dB Labels -->
                <StackPanel HorizontalAlignment="Left" Margin="35,0,0,8" Grid.ColumnSpan="2">
                    <TextBlock Text="0" FontSize="8" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="-6" FontSize="8" Margin="0,24,0,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="-12" FontSize="8" Margin="0,24,0,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <TextBlock Text="-18" FontSize="8" Margin="0,24,0,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

            </Grid>

            <ToggleButton x:Name="MuteButton"
                          Content="M"
                          Width="60"
                          Margin="0,8,0,0"
                          HorizontalAlignment="Center"
                          Checked="MuteButton_Checked"
                          Unchecked="MuteButton_Unchecked"
                          Style="{StaticResource MixerMuteButtonStyle}" />

        </StackPanel>
    </Border>
</UserControl>
