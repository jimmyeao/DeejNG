<Window x:Class="DeejNG.Dialogs.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Settings" Height="806" Width="900"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        TextElement.Foreground="{DynamicResource TextPrimaryBrush}"
        Background="{DynamicResource BackgroundBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="12"
        FontFamily="Segoe UI"
        TextOptions.TextFormattingMode="Ideal">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <shell:WindowChrome x:Key="Chrome" CaptionHeight="0" CornerRadius="8,8,8,8" ResizeBorderThickness="0" GlassFrameThickness="0" UseAeroCaptionButtons="False" />
        </ResourceDictionary>
    </Window.Resources>
    <shell:WindowChrome.WindowChrome>
        <StaticResource ResourceKey="Chrome" />
    </shell:WindowChrome.WindowChrome>
    <DockPanel Margin="0,0,0,10">
        <Border DockPanel.Dock="Top" Background="{DynamicResource SurfaceBrush}">
            <Grid Height="48" MouseLeftButtonDown="TitleBar_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="⚙" FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Settings" Style="{StaticResource TitleTextBlock}" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="2" Content="✕" Style="{StaticResource IconButton}" 
                        shell:WindowChrome.IsHitTestVisibleInChrome="True" 
                        ToolTip="Close" Click="CloseButton_Click" Margin="8,0"/>
            </Grid>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="General" Style="{StaticResource TitleTextBlock}" FontSize="18" Margin="0,0,0,16"/>
                    <Border Style="{StaticResource Card}" Padding="20" Margin="0,0,0,20" Height="227">
                        <StackPanel>
                            <CheckBox x:Name="SettingInvertSliders" Content="Invert Sliders" Margin="0,0,0,12"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <CheckBox x:Name="SettingShowMeters" Content="Show Meters" Margin="0,0,0,12"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <CheckBox x:Name="SettingStartOnBoot" Content="Start on boot" Margin="0,0,0,12"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <CheckBox x:Name="SettingStartMinimized" Content="Start minimized" Margin="0,0,0,12"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <CheckBox x:Name="SettingDisableSmoothing" Content="Disable Smoothing" Margin="0,0,0,12"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <CheckBox x:Name="SettingUseExponentialVolume" Content="Use Exponential Volume" Margin="0,0,0,12"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Exp. Volume Factor" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Width="130"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Slider x:Name="ExponentialVolumeFactorSlider" Minimum="1.5" Maximum="10.0" Width="180" TickFrequency="0.1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ElementName=ExponentialVolumeFactorSlider, Path=Value, StringFormat={}{0:F1}}" Margin="10,0,0,0" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlock}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Serial Connection" Style="{StaticResource TitleTextBlock}" FontSize="18" Margin="0,0,0,16"/>
                    <Border Style="{StaticResource Card}" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="COM Port:" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Width="80"/>
                                <ComboBox x:Name="SettingComPortSelector" Width="160" Margin="0,0,8,0"
                                          Style="{StaticResource ModernComboBox}"
                                          DropDownOpened="SettingComPortSelector_DropDownOpened"/>
                                <Button x:Name="SettingConnectButton" Content="Connect" Style="{StaticResource ModernButton}" Click="SettingConnect_Click"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Baud Rate:" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Width="80"/>
                                <ComboBox x:Name="BaudRateComboBox" Width="160" Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="9600"/>
                                    <ComboBoxItem Content="19200"/>
                                    <ComboBoxItem Content="38400"/>
                                    <ComboBoxItem Content="57600"/>
                                    <ComboBoxItem Content="115200"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">
                    <TextBlock Text="Overlay" Style="{StaticResource TitleTextBlock}" FontSize="18" Margin="0,0,0,16"/>
                    <Border Style="{StaticResource Card}" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <CheckBox x:Name="OverlayEnabledCheckBox" Content="Enable Overlay" Margin="0,0,0,16"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Opacity" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Width="80"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Slider x:Name="OpacitySlider" Minimum="0.0" Maximum="1.0" Width="180" TickFrequency="0.05" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:P0}}" Margin="10,0,0,0" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlock}"/>
                                </StackPanel>
                            </Grid>

                            <CheckBox x:Name="AutoCloseCheckBox" Content="Auto-Close Overlay" Margin="0,0,0,16"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>

                            <Grid Margin="0,0,0,16" IsEnabled="{Binding IsChecked, ElementName=AutoCloseCheckBox}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Timeout (s)" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Width="80"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Slider x:Name="TimeoutSlider" Minimum="1" Maximum="15" Width="180" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ElementName=TimeoutSlider, Path=Value}" Margin="10,0,0,0" VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlock}"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Text Color" Style="{StaticResource LabelTextBlock}" VerticalAlignment="Center" Width="80"/>
                                <ComboBox Grid.Column="1" x:Name="TextColorComboBox" 
                                          Style="{StaticResource ModernComboBox}"
                                          HorizontalAlignment="Left"
                                          Width="200"
                                          ToolTip="Choose text color: Auto detects background, White/Black forces specific color">
                                    <ComboBoxItem Content="Auto (Smart Contrast)"/>
                                    <ComboBoxItem Content="White Text"/>
                                    <ComboBoxItem Content="Black Text"/>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="Unmapped Exclusions" Style="{StaticResource TitleTextBlock}" FontSize="18"/>
                    <Border Style="{StaticResource Card}" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Apps excluded from 'Unmapped Applications' control:"
                                       Style="{StaticResource SubtitleTextBlock}"
                                       Margin="0,0,0,8"
                                       TextWrapping="Wrap"/>
                            <ListBox x:Name="ExcludedAppsListBox"
                                     Height="100"
                                     Margin="0,0,0,8"
                                     Background="{DynamicResource SurfaceBrush}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"/>
                            <StackPanel Orientation="Horizontal">
                                <ComboBox x:Name="RunningAppsComboBox"
                                          Width="200"
                                          Margin="0,0,8,0"
                                          Style="{StaticResource ModernComboBox}"
                                          DropDownOpened="RunningAppsComboBox_DropDownOpened"/>
                                <Button Content="Add"
                                        Style="{StaticResource ModernButton}"
                                        Click="AddExcludedApp_Click"
                                        Padding="12,4"/>
                                <Button Content="Remove"
                                        Style="{StaticResource ModernButton}"
                                        Click="RemoveExcludedApp_Click"
                                        Margin="8,0,0,0"
                                        Padding="12,4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                    <TextBlock Text="Physical Buttons (Experimental)" Style="{StaticResource TitleTextBlock}" FontSize="18" Margin="0,0,0,16"/>
                    <Border Style="{StaticResource Card}" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Configure physical buttons on your controller"
                                       Style="{StaticResource SubtitleTextBlock}"
                                       Margin="0,0,0,12"/>

                            <Button Content="Configure Buttons..."
                                    Style="{StaticResource ModernButton}"
                                    Click="ConfigureButtons_Click"
                                    HorizontalAlignment="Left"
                                    Padding="16,8"
                                    ToolTip="Open button configuration dialog"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                    <Button Content="Save" Style="{StaticResource ModernButton}" Click="Save_Click" Margin="0,0,10,0"/>
                    <Button Content="Cancel" Style="{StaticResource ModernButton}" Click="Cancel_Click"/>
                </StackPanel>

            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>