<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Palette (Windows 11-ish) -->
  <Color x:Key="App.Color.Background">#1E1F24</Color>
  <Color x:Key="App.Color.Surface">#2A2B31</Color>
  <Color x:Key="App.Color.SurfaceAlt">#32333A</Color>
  <Color x:Key="App.Color.Outline">#3A3B42</Color>
  <Color x:Key="App.Color.Primary">#2962FF</Color>
  <Color x:Key="App.Color.PrimaryText">#FFFFFFFF</Color>
  <Color x:Key="App.Color.OnBackground">#EDEDED</Color>

  <SolidColorBrush x:Key="App.Brush.Background" Color="{StaticResource App.Color.Background}"/>
  <SolidColorBrush x:Key="App.Brush.Surface" Color="{StaticResource App.Color.Surface}"/>
  <SolidColorBrush x:Key="App.Brush.SurfaceAlt" Color="{StaticResource App.Color.SurfaceAlt}"/>
  <SolidColorBrush x:Key="App.Brush.Outline" Color="{StaticResource App.Color.Outline}"/>
  <SolidColorBrush x:Key="App.Brush.Primary" Color="{StaticResource App.Color.Primary}"/>
  <SolidColorBrush x:Key="App.Brush.Foreground" Color="{StaticResource App.Color.OnBackground}"/>

  <!-- App-level text defaults -->
  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource App.Brush.Foreground}"/>
  </Style>

  <!-- Buttons -->
  <Style TargetType="ComboBox">
    <Setter Property="Foreground" Value="{StaticResource App.Brush.Foreground}"/>
    <Setter Property="Background" Value="{StaticResource App.Brush.SurfaceAlt}"/>
    <Setter Property="BorderBrush" Value="{StaticResource App.Brush.Outline}"/>
    <Setter Property="Padding" Value="8,4"/>
    <Setter Property="ItemContainerStyle">
      <Setter.Value>
        <Style TargetType="ComboBoxItem">
          <Setter Property="Foreground" Value="{StaticResource App.Brush.Foreground}"/>
          <Setter Property="Background" Value="{StaticResource App.Brush.Surface}"/>
        </Style>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="Button">
    <Setter Property="Foreground" Value="{StaticResource App.Brush.Foreground}"/>
    <Setter Property="Background" Value="{StaticResource App.Brush.SurfaceAlt}"/>
    <Setter Property="BorderBrush" Value="{StaticResource App.Brush.Outline}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>

  <!-- Icon button: use Segoe MDL2 Assets glyphs -->
  <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="Width" Value="30"/>
    <Setter Property="Height" Value="30"/>
    <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Content" Value="&#xE713;"/> <!-- Gear -->
  </Style>

  <!-- Card helper -->
  <Style x:Key="Card" TargetType="Border">
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Background" Value="{StaticResource App.Brush.Surface}"/>
    <Setter Property="BorderBrush" Value="{StaticResource App.Brush.Outline}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="8"/>
  </Style>

  <!-- Switch toggle style for ToggleButton -->
  <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
    <Setter Property="Width" Value="64"/>
    <Setter Property="Height" Value="28"/>
    <Setter Property="Margin" Value="0,0,16,0"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ToggleButton">
          <Grid>
            <Border x:Name="Track" CornerRadius="14" Background="{StaticResource App.Brush.Outline}"/>
            <Border x:Name="Thumb" Width="24" Height="24" CornerRadius="12" Background="White" Margin="2"/>
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.0"/>
          </Grid>
          <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="True">
              <Setter TargetName="Track" Property="Background" Value="{StaticResource App.Brush.Primary}"/>
              <Setter TargetName="Thumb" Property="Background" Value="#FFF"/>
              <Setter TargetName="Thumb" Property="Margin" Value="38,2,2,2"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>
